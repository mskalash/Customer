<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/splashtext"
    android:paddingTop="10dp"
    android:text="CUSTOMER"
    android:textSize="27sp"
    android:paddingRight="2dp"
    android:gravity="center"
    android:layout_below="@+id/splashimage"
    android:layout_alignLeft="@+id/splashimage"
    android:layout_alignStart="@+id/splashimage"
    android:layout_alignRight="@+id/splashimage"
    android:layout_alignEnd="@+id/splashimage"
    android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="156dp"
        android:id="@+id/splashimage"
        android:src="@drawable/newprofile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>