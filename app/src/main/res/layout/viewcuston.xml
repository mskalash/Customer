<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#293694"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:src="@drawable/newprofile" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/firsname"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="Princess "
                    android:textColor="#fff"
                    android:textSize="23sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/desc"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=" met met met met met met"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/more"
                    android:textColor="#FF5252"
                    android:paddingBottom="10dp"/>

            </LinearLayout>

            <com.like.LikeButton
                android:id="@+id/star_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                app:icon_size="30dp"
                app:icon_type="star"
                app:like_drawable="@drawable/staron"
                app:unlike_drawable="@drawable/favorite"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>