<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/newprofile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/firsname"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Princess "
                        android:textSize="23sp"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <com.like.LikeButton
                        android:id="@+id/star_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        app:icon_size="30dp"
                        app:icon_type="heart"
                        android:layout_marginLeft="5dp"
                        app:like_drawable="@drawable/staron"
                        app:unlike_drawable="@drawable/staroff" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=" met met met met met met"
                    android:textSize="13sp"
                    android:textColor="#DBD7D2"/>

                <TextView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="@string/more"
                    android:textColor="#FF5252"
                    android:textSize="16sp"
                    android:layout_marginRight="30dp"/>

            </LinearLayout>

            <!--<com.like.LikeButton-->
            <!--android:id="@+id/star_button"-->
            <!--android:layout_width="35dp"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginRight="25dp"-->
            <!--android:padding="5dp"-->
            <!--app:icon_size="30dp"-->
            <!--app:icon_type="star"-->
            <!--app:like_drawable="@drawable/staron"-->
            <!--app:unlike_drawable="@drawable/staroff"/>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>